{
  "name": "@ag-grid-community/react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "community-modules/react/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "nx:noop"
    },
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["build:package", "build:umd"],
      "inputs": [
        {
          "externalDependencies": ["npm:typescript"]
        }
      ],
      "cache": false,
      "configurations": {
        "watch": {},
        "production": {}
      }
    },
    "build:package": {
      "executor": "@nx/rollup:rollup",
      "inputs": ["tsDefaults", "{projectRoot}/package.json", { "externalDependencies": ["react"] }],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "community-modules/react/dist",
        "generateExportsField": false,
        "tsConfig": "community-modules/react/tsconfig.lib.json",
        "project": "community-modules/react/package.json",
        "entryFile": "community-modules/react/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime"],
        "rollupConfig": "community-modules/react/rollup.config.cjs",
        "compiler": "babel",
        "assets": [
          {
            "glob": "community-modules/react/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "community-modules/react/LICENSE.txt",
            "input": ".",
            "output": "."
          }
        ],
        "format": ["cjs", "esm"]
      }
    },
    "build:umd": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build:package"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "community-modules/react/dist/umd",
        "outputFileName": "ag-charts-react",
        "main": "community-modules/react/dist/index.cjs",
        "tsConfig": "community-modules/react/tsconfig.lib.json",
        "esbuildConfig": "esbuild.config.cjs",
        "platform": "browser",
        "target": "es6",
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": true,
        "external": ["@ag-grid-community/core", "react", "react-dom"],
        "format": ["cjs"],
        "sourcemap": true
      },
      "configurations": {
        "production": {
          "sourcemap": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "community-modules/react/jest.config.ts"
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}.tgz"],
      "options": {
        "cwd": "community-modules/react",
        "parallel": false,
        "commands": ["mkdir -p ../../dist/packages", "yarn pack -f ../../dist/community-modules/react.tgz"]
      }
    },
    "pack:extract": {
      "executor": "nx:run-commands",
      "dependsOn": ["pack"],
      "inputs": ["{workspaceRoot}/dist/{projectRoot}.tgz"],
      "outputs": ["{workspaceRoot}/dist/packages/contents/ag-charts-react/"],
      "options": {
        "parallel": false,
        "commands": [
          "mkdir -p dist/packages/contents/ag-charts-react",
          "tar -xzf dist/community-modules/react.tgz -C dist/packages/contents/ag-charts-react/"
        ]
      }
    },
    "pack:verify": {
      "executor": "nx:run-commands",
      "dependsOn": ["pack:extract"],
      "inputs": ["{workspaceRoot}/dist/packages/contents/ag-charts-react/"],
      "options": {
        "commands": ["node tools/sanity-check-package.js dist/packages/contents/ag-charts-react/package"]
      }
    }
  }
}
