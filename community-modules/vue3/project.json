{
  "name": "@ag-grid-community/vue3",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "community-modules/vue3/src",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "inputs": [
        "tsDefaults",
        "{projectRoot}/(vue|postcss).config.js",
        "{projectRoot}/src/**",
        "{projectRoot}/main.(js|d.ts)",
        "{projectRoot}/node_modules/vue/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "script": "build"
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}.tgz"],
      "options": {
        "cwd": "community-modules/vue3",
        "parallel": false,
        "commands": ["mkdir -p ../../dist/packages", "yarn pack -f ../../dist/community-modules/vue3.tgz"]
      }
    },
    "pack:extract": {
      "executor": "nx:run-commands",
      "dependsOn": ["pack"],
      "inputs": ["{workspaceRoot}/dist/{projectRoot}.tgz"],
      "outputs": ["{workspaceRoot}/dist/packages/contents/ag-charts-vue3/"],
      "options": {
        "parallel": false,
        "commands": [
          "mkdir -p dist/packages/contents/ag-charts-vue3",
          "tar -xzf dist/community-modules/vue3.tgz -C dist/packages/contents/ag-charts-vue3/"
        ]
      }
    },
    "pack:verify": {
      "executor": "nx:run-commands",
      "dependsOn": ["pack:extract"],
      "inputs": ["{workspaceRoot}/dist/packages/contents/ag-charts-vue3/"],
      "options": {
        "commands": ["node tools/sanity-check-package.js dist/packages/contents/ag-charts-vue3/package"]
      }
    }
  },
  "tags": ["module:community", "module:framework", "module", "community", "framework"]
}
