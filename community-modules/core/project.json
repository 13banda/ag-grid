{
  "name": "@ag-grid-community/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "community-modules/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["build:types", "build:package", "build:umd"],
      "inputs": [
        {
          "externalDependencies": [
            "npm:typescript"
          ]
        }
      ],
      "cache": false,
      "configurations": {
        "watch": {},
        "production": {}
      }
    },
    "build:types": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:types"],
      "inputs": ["tsDefaults"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "community-modules/core/dist/types",
        "main": "community-modules/core/src/main.ts",
        "tsConfig": "community-modules/core/tsconfig.types.json",
        "compiler": "tsc"
      },
      "configurations": {
        "watch": {
          "tsConfig": "community-modules/core/tsconfig.types.watch.json"
        },
        "production": {}
      }
    },
    "build:package": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "tsDefaults"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "community-modules/core/dist/package",
        "main": "community-modules/core/src/main.ts",
        "tsConfig": "community-modules/core/tsconfig.lib.json",
        "esbuildConfig": "esbuild.config.cjs",
        "platform": "browser",
        "target": "es6",
        "format": [
          "cjs",
          "esm"
        ],
        "sourcemap": true
      },
      "configurations": {
        "watch": {
          "tsConfig": "community-modules/core/tsconfig.watch.json"
        },
        "production": {
          "sourcemap": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "community-modules/jest.config.ts"
      }
    }
  },
  "tags": []
}
