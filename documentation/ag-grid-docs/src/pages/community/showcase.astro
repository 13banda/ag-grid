---
import Layout from '../../layouts/Layout.astro';
import CommunityMenu from '@components/community-section/CommunityMenu';
import LayoutStyles from '@design-system/modules/CommunityLayout.module.scss';
import Showcase from '@components/community-section/Showcase';
import { getEntry } from 'astro:content';

const { data: showcase } = await getEntry('community', 'showcase');
---

<Layout
    showSearchBar={true}
    showDocsNav={false}
    title="AG Grid: Showcase"
    description="AG Grid's products are downloaded millions of times per week. Most projects are internal and closed source, but we've hand-picked 200+ open-source examples to help inspire your next project."
>
    <div class="layout-max-width-large">
        <div class={LayoutStyles.header}>
            <CommunityMenu path={Astro.url.pathname} client:load />
        </div>
        <div class="layout-max-width-small">
            <div class={LayoutStyles.container}>
                <div class={LayoutStyles.content}>
                    <!-- Title & Description -->
                    <h1>Showcase</h1>
                    <p class={LayoutStyles.description}>
                        AG Grid's products are downloaded millions of times per week. Most projects are internal and
                        closed source, but we've hand-picked 200+ open-source examples to help inspire your next
                        project.
                    </p>
                    <section>
                        <h2>Our Favourites</h2>
                        <Showcase client:load showcase={showcase} favouritesOnly={true} />
                    </section>
                    <section>
                        <h2>Full Showcase</h2>
                        <Showcase client:visible showcase={showcase} />
                    </section>
                </div>
            </div>
        </div>
    </div>
</Layout>
